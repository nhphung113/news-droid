<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/layout_news_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_news_item_textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngôi nhà 115 m2 ngập gió trời ở Sài Gòn"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/layout_news_item_textShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Ngôi nhà rộng rãi với ánh sáng dịu nhẹ, nhiều gió mát đem lại cảm giác thoải mái cho cặp vợ chồng từng sống ở trung tâm ngột ngạt."
            android:textColor="#323232"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_news_item_textCatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kinh doanh"
                android:textColor="#77C526" />

            <TextView
                android:id="@+id/layout_news_item_textView211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:id="@+id/layout_news_item_textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 phút trước" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
